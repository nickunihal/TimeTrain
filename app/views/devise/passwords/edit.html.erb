<div class="page-container">
	<h1><%= image_tag("logo_white.png", class: "logo") %></h1>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	  <%= devise_error_messages! %>
  	  <%= f.hidden_field :reset_password_token %>

  	  <div><% f.label :password  %>
      <%= f.password_field :password, placeholder: "New password",autofocus: true, autocomplete: "off" %></div>

  	  <div><% f.label :password_confirmation %>
  	  <%= f.password_field :password_confirmation , placeholder: "Confirm new password", autocomplete: "off" %></div>

      <button>Change my password<% f.submit  %></button>
	<% end %>
	</div>
	<div class="signup">
		<%= link_to "Click here to Sign in", new_member_session_path, method: :get %>
	</div>
